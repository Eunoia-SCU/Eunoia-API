extends baseEmail

block content
  p Reset your password
  h2 Hi #{firstName},
  h3 We received a request to reset the password on your Eunoia Account.
  h3 Enter this code to complete the reset.
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${resetCode}`, target='_blank') #{resetCode}
  p Thanks for helping us keep your account secure.
